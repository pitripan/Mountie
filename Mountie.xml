<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
  <!-- START FONTS -->
  <Font name="Mountie_DisplayListFont" font="Interface\AddOns\Mountie\media\fonts\francois.TTF" virtual="true">
    <Color r="1.0" g="0.82" b="0"/>
		<Shadow>
			<Offset>
				<AbsDimension x="1" y="-1"/>
			</Offset>
			<Color r="0" g="0" b="0"/>
		</Shadow>
		<FontHeight>
			<AbsValue val="12"/>
		</FontHeight>
	</Font>
  <Font name="Mountie_SessionTimeFont" font="Interface\AddOns\Mountie\media\fonts\francois.TTF" virtual="true">
    <Color r="0.9" g="0.9" b="0.9"/>
    <Shadow>
      <Offset>
        <AbsDimension x="1" y="-1"/>
      </Offset>
      <Color r="0" g="0" b="0"/>
    </Shadow>
		<FontHeight>
			<AbsValue val="18"/>
		</FontHeight>
	</Font>
  <!-- END FONTS -->

  <!-- START TEMPLATES -->
  <Button name="MountieDefaultButtonTemplate" inherits="UIPanelButtonTemplate" virtual="true">
    <Size x="120" y="24" />
    <Scripts>
      <OnEnter function="Mountie_Button_OnEnter"/>
      <OnLeave function="Mountie_Button_OnLeave"/>
    </Scripts>
  </Button>
  <Button name="MountieDefaultIconButtonTemplate" inherits="UIPanelButtonTemplate" virtual="true">
    <Size x="32" y="32" />
    <Scripts>
      <OnEnter function="Mountie_IconButton_OnEnter"/>
      <OnLeave function="Mountie_Button_OnLeave"/>
    </Scripts>
  </Button>

  <Texture name="Mountie_UIPanelButtonUpTexture" urgency="5" file="Interface\Buttons\UI-Panel-Button-Disabled" virtual="true">
    <TexCoords left="0" right="0.625" top="0" bottom="0.6875"/>
  </Texture>
  <Texture name="Mountie_UIPanelButtonDownTexture" file="Interface\Buttons\UI-Panel-Button-Disabled-Down" virtual="true">
    <TexCoords left="0" right="0.625" top="0" bottom="0.6875"/>
  </Texture>
  <Texture name="Mountie_UIPanelButtonHighlightTexture" file="Interface\Buttons\UI-Panel-Button-Highlight2" alphaMode="ADD" virtual="true">
    <TexCoords left="0" right="0.625" top="0" bottom="0.6875"/>
  </Texture>
  <Button name="Mountie_UIPanelButtonTemplate" virtual="true">
    <Size x="48" y="24" />
    <ButtonText name="$parentText"/>
    <NormalFont style="Mountie_DisplayListFont"/>
    <HighlightFont style="GameFontHighlight"/>
    <DisabledFont style="GameFontDisable"/>
    <NormalTexture inherits="Mountie_UIPanelButtonUpTexture"/>
    <PushedTexture inherits="Mountie_UIPanelButtonDownTexture"/>
    <DisabledTexture inherits="Mountie_UIPanelButtonUpTexture"/>
    <HighlightTexture inherits="Mountie_UIPanelButtonHighlightTexture"/>
    <Scripts>
      <OnEnter function="Mountie_Button_OnEnter"/>
      <OnLeave function="Mountie_Button_OnLeave"/>
    </Scripts>
  </Button>

  <Texture name="Mountie_TransparentButtonHighlightTexture" file="Interface\FriendsFrame\PendingFriendNameBG" alphaMode="ADD" virtual="true">
    <TexCoords left="0.5" right="1" top="0" bottom="0.52"/>
  </Texture>
  <Button name="Mountie_TransparentButtonTemplate" virtual="true">
    <Size x="200" y="16" />
    <ButtonText name="$parentText"/>
    <NormalFont style="Mountie_DisplayListFont"/>
    <HighlightFont style="Mountie_DisplayListFont"/>
    <DisabledFont style="Mountie_DisplayListFont"/>
    <HighlightTexture inherits="Mountie_TransparentButtonHighlightTexture"/>
    <Scripts>
      <!-- <OnEnter function="Mountie_Button_OnEnter"/> -->
      <OnLeave function="Mountie_Button_OnLeave"/>
    </Scripts>
  </Button>

  <Texture name="Mountie_ItemIgnoreButtonUpTexture" urgency="5" file="Interface\Buttons\UI-GroupLoot-Pass-Up" virtual="true">
    <TexCoords left="0" right="1.0" top="0" bottom="1.0"/>
  </Texture>
  <Texture name="Mountie_ItemIgnoreButtonDownTexture" file="Interface\Buttons\UI-GroupLoot-Pass-Down" virtual="true">
    <TexCoords left="0" right="1.0" top="0" bottom="1.0"/>
  </Texture>
  <Texture name="Mountie_ItemIgnoreButtonHighlightTexture" file="Interface\Buttons\UI-GroupLoot-Pass-Highlight" alphaMode="ADD" virtual="true">
    <TexCoords left="0" right="1.0" top="0" bottom="1.0"/>
  </Texture>
  <Button name="Mountie_ItemIgnoreButtonTemplate" virtual="true">
    <Size x="16" y="16" />
    <NormalTexture inherits="Mountie_ItemIgnoreButtonUpTexture"/>
    <PushedTexture inherits="Mountie_ItemIgnoreButtonDownTexture"/>
    <HighlightTexture inherits="Mountie_ItemIgnoreButtonHighlightTexture"/>
    <Scripts>
      <OnEnter function="Mountie_ItemIgnoreButton_OnEnter"/>
      <OnLeave function="Mountie_Button_OnLeave"/>
    </Scripts>
  </Button>
  <!-- END TEMPLATES -->

  <Button name="MountieButton" parent="UIParent" frameStrata="LOW" hidden="true">
    <Scripts>
      <OnClick>
        Mountie:MountieButton_OnClick()
      </OnClick>
    </Scripts>
  </Button>
</Ui>
